@model IEnumerable<Entidades.Administracion.Biometrico>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Biométricos</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p>
                    <a href="@Url.Action("Create","Biometrico")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Nuevo Biométrico</a>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @if (item.Estado == 'A')
                                    {
                                        @Html.Raw("Activo")
                                    }
                                    else
                                    {
                                        @Html.Raw("Inactivo")
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Biometrico", new { id = item.BiometricoID })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                @if (item.Estado == 'A')
                                {
                                    <a href="@Url.Action("Inactivar", "Biometrico", new { id = item.BiometricoID })" class="btn btn-danger">Inactivar</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Activar", "Biometrico", new { id = item.BiometricoID })" class="btn btn-success">Activar</a>
                                }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
