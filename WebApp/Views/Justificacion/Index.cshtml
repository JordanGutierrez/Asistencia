
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
    System.Data.DataTable dt = ViewBag.Faltas;
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Faltas</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow item in dt.Rows)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(DateTime.Parse(item["Fecha"].ToString()).ToShortDateString())
                                </td>
                                <td>
                                    @Html.Raw(item["Usuario"])
                                </td>
                                <td>
                                    <a href="@Url.Action("Justificar","Justificacion", new { asistencia = item["AsistenciaID"] })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
