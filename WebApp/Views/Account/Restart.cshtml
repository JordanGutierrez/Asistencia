@model Entidades.Administracion.Usuario

@{
    ViewBag.Title = "Restart";
}

<h2>Restart</h2>


@using (Html.BeginForm(Html.BeginForm("Restart", "Account", FormMethod.Post, new { @class = "form-horizontal form-label-left" })))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UsuarioID)

        <div class="form-group">
            @Html.LabelFor(m => m.Clave, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.PasswordFor(m => m.Clave, new { @class = "form-control col-md-7 col-xs-12" })
                @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 col-sm-6 col-xs-12">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Grabar
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
