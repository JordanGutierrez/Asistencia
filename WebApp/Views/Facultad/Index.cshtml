@model IEnumerable<Entidades.Administracion.Facultad>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Facultades</h2>
                <style>
                    .tmbbtn {
                        width: 80px;
                    }
                </style>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p>
                    <a href="@Url.Action("Create","Facultad")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Nueva Facultad</a>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @if (item.Estado == 'A')
                                    {
                                        @Html.Raw("Activo")
                                    }
                                    else
                                    {
                                        @Html.Raw("Inactivo")
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Facultad", new { id = item.FacultadID })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                    @if (item.Estado == 'A')
                                    {
                                        <a href="@Url.Action("Inactivar", "Facultad", new { id = item.FacultadID })" class="tmbbtn btn btn-danger">Inactivar</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Activar", "Facultad", new { id = item.FacultadID })" class="tmbbtn btn btn-success">Activar</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>